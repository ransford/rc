if test -x /opt/local/bin/vim; then
	alias vim=/opt/local/bin/vim
fi
if test -x /Applications/MacPorts/MacVim.app/Contents/MacOS/Vim; then
	alias gvim='/Applications/MacPorts/MacVim.app/Contents/MacOS/Vim -g'
	alias gvimt='gvim --remote-tab-silent'
fi
alias less='less -R'
alias locate='mdfind -name'
alias lsa='ls -AFGl'
alias screensaver='/System/Library/Frameworks/ScreenSaver.framework/Resources/ScreenSaverEngine.app/Contents/MacOS/ScreenSaverEngine'
