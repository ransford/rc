[color]
	ui = auto
[user]
	name = Ben Ransford
	email = ransford@cs.umass.edu

[alias]
	co = checkout
	st = status
	di = diff
	pul = pull
	tree = log --graph --decorate --pretty=oneline --abbrev-commit
	vssvn = log --oneline git-svn..
	serve = instaweb
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
[core]
	autocrlf = input
	excludesfile = ~/.rc/.gitignore.global
[instaweb]
	httpd = webrick
	port = 8180
	local = true
[web]
	browser = mychrome
[browser "mychrome"]
	cmd = open -a 'Google Chrome'
[branch]
	autosetuprebase = always
